{{!
    @template local_classreport/main

    This template renders the main content area for the class report local plugin.

    Example context (json):
    {}
}}
<table class="local_classreport_table">
    <thead>
        <tr>
            <td><span/></td>
            <td><span/></td>
            {{#courseheaders}}
            <th colspan="{{colspan}}">{{name}}<br>{{#userdate}} {{startdate}}, {{#str}} strftimedate {{/str}} {{/userdate}}</th>
            {{/courseheaders}}
        </tr>
        <tr>
            <th>{{#str}} students {{/str}}</th>
            <th>Level</th>
            {{#activities}}
            <th>{{name}}</th>
            {{#last}}
            <th>{{#str}} done, local_classreport {{/str}}</th>
            {{/last}}
            {{/activities}}
        </tr>
    </thead>
    <tbody>
    {{#table}}
        <tr>
            <th>{{{content}}}</th>
            <th>{{level}}</th>
    {{#header}}
            <th colspan="{{colspan}}"></th>
    {{/header}}
    {{^header}}
            {{#columns}}<td>{{#complete}}1{{/complete}}{{^complete}}0{{/complete}}</td>
            {{#last}}<td>{{#done}}Yes{{/done}}{{^done}}No{{/done}}</td>{{/last}}{{/columns}}
    {{/header}}
        </tr>
    {{/table}}
</table>